@model List<Category>

<partial name="_Notifications" />
<div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">
                    Category List
                </h2>
            </div>
            <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Create new category</a>
            </div>
        </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
            <tr>
                <th>
                    Category_Name
                </th>
                <th>
                    Display_Order
                </th>
                <th>
                    Modify
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                            <a class="btn btn-primary mx-2" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    </div>

